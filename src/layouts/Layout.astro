---
const { title } = Astro.props;

import Navbar from '../components/Navbar.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <title> { title } </title>
  </head>
  <body>
    <Navbar />
    <main>
      <slot />
    </main>
	</body>
</html>

<style is:global>
  @import "tailwindcss";
</style>

<style>
	html,
  body {
    color-scheme: light dark;
		margin: 0;
		width: 100%;
		height: 100%;
  }
  :global(body) {
    background: linear-gradient(to bottom, black, rgba(0, 0, 0, 0.95));
    min-height: 100vh;
  }
</style>
