---
interface Feature {
  icon: string;
  text: string;
  strike?: boolean;
}

interface Props {
  title: string;
  price: string;
  features: Feature[];
  isPopular?: boolean;
  icon?: string;
  buttonText: string;
  buttonIcon?: string;
  buttonClass: string;
  borderClass?: string;
  popularBadge?: boolean;
}

const {
  title,
  price,
  features,
  isPopular = false,
  icon = '',
  buttonText,
  buttonIcon = '',
  buttonClass,
  borderClass = "border-white/10",
  popularBadge = false
} = Astro.props as Props;
---


<div class={`relative overflow-hidden rounded-xl border ${borderClass} bg-black/50 p-6 transition-all hover:border-white/20 hover:shadow-lg ${isPopular ? 'bg-gradient-to-b from-black/80 to-black shadow-lg shadow-[#FFC0B4]/10' : ''}`}>
  {isPopular && (
    <div class="absolute -right-12 -top-12 h-40 w-40 rounded-full bg-[#FFC0B4]/20 blur-2xl"></div>
  )}
  
  {popularBadge && (
    <div class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent absolute right-4 top-4 bg-[#FFC0B4] text-black hover:bg-[#FFC0B4]/80">
      Popular
    </div>
  )}

  <div class="space-y-4">
    <div class="flex items-center gap-2">
      <h3 class="text-xl font-bold">{title}</h3>
      <Fragment set:html={icon} />
    </div>
    
    <div class="text-3xl font-bold">
      {price}<span class="text-lg font-normal text-white/50">/month</span>
    </div>
    
    <slot name="description" />
    
    <ul class="space-y-2.5">
      {features.map((feature) => (
        <li class="flex items-center gap-2">
          <Fragment set:html={feature.icon} />
          <span class={feature.strike ? 'text-white/50 line-through' : ''}>{feature.text}</span>
        </li>
      ))}
    </ul>
  </div>

  <div class="mt-6">
    <button class={`inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 w-full h-10 px-4 py-2 ${buttonClass}`}>
      <Fragment set:html={buttonIcon} />
      {buttonText}
    </button>
  </div>
</div>